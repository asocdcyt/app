  <section class="min-vh-100 mb-8" id="Inscription">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3">
      <div class="container">
        <div class="row justify-content-center">
          
          <div class="col-lg-5 text-center mx-auto">
            <h2 class="text-gradient text-dark text-center mb-0">Verificación de <span class="text-gradient text-success">Estatus</span></h2>
            <p class="text-lead text-dark">Use el siguiente formulario para proceder a ver el estatus de su solicitud:</p>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10">
        <div class="col-xl-12 col-lg-12 col-md-12 mx-auto">
          {{#if success_msg }}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span class="alert-icon text-white"><i class="ni ni-like-2"></i></span>
                <span class="alert-text text-white"><strong>¡Enhorabuena! -</strong> {{ success_msg }}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            {{#if error}}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <span class="alert-icon text-white"><i class="ni ni-support-16"></i></span>
                  <span class="alert-text text-white"><strong>¡Hey! -</strong> {{error}}</span>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
            {{/if}}
            {{#each errors }}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <span class="alert-icon text-white"><i class="ni ni-support-16"></i></span>
                  <span class="alert-text text-white"><strong>¡Hey! -</strong> {{text}}</span>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
            {{/each}}
            {{#if error_msg }}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <span class="alert-icon text-white"><i class="ni ni-support-16"></i></span>
                  <span class="alert-text text-white"><strong>¡Hey! -</strong> {{error_msg}}</span>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
            {{/if}}
          <div class="card z-index-0">
            <div class="card-body">
              {{#each emails}}
                <h3 class="mb-5 text-gradient text-dark text-center">Estado de la solicitud de inscripción: <span class="text-gradient text-dark">{{status}}</span></h3>
                {{else}}
                <p class="mb-5 text-center text-dark">Para verificar el estatus ingrese su Correo Electrónico a continuación:</p>
                <form role="form text-left" action="/event-validate" method="POST">
                <label class="text-dark">Correo Electrónico Afiliado a la Solicitud</label>
                <div class="mb-3">
                  <div class="input-group">
                    <input type="email" class="form-control" name="email" placeholder="Correo Electrónico..." aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-dark mb-0" type="submit" id="button-addon2">Validar</button>
                  </div>
                </div>
                </form>
                {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
