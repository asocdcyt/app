<script type="text/javascript">
  var valueList = document.getElementById('valueList');
  var listArray = 5;
  var suma = 0;
  var checkboxes = document.querySelectorAll('.checkboxing');

  var f1 = document.getElementById('f1');
  var amountref = document.getElementById('amountref');

  for(var checkbox of checkboxes) {
    checkbox.addEventListener('click', function(){
      if(this.checked == true) {
          suma = suma + listArray;
          valueList.innerHTML = "$" + suma;
          document.f1.amountref.value = suma;
      } else {
        suma = suma - listArray;
        valueList.innerHTML = "$" + suma;
        document.f1.amountref.value = suma;
      }
    })
  }
</script>